<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Easy Eats: Log in</title>
        <% include ../partials/head %>
    </head>

    <body>
        <% include ../partials/header %>
        <div class="container mt-5 mb-5">
        <div class="row">
            <div class="col-md-4 col-sm-12"></div>
            <div class="col-md-4 col-sm-12">
                <div class="login-info-messages">
                    <% include ../partials/messages %>
                </div>
                <h2 class="text-center">Log in</h2>
                <form class="text-center" id="log-in" action="/app/users/login" method="POST">
                    <div class="form-group">
                        <label for="logInEmal"></label>
                        <input type="email" class="form-control loginInput text-center" name="email" aria-describedby="emailHelp" placeholder="Email address">
                    </div>
                    <div class="form-group">
                        <label for="logInPassword"></label>
                        <input type="password" class="form-control loginInput text-center" name="password" placeholder="Password">
                        <input type="hidden" value="<%= table_number %>" name="qrtnrtbl">
                    </div>
                    <button type="submit" class="btn btn-success mt-3 px-5"><h5 class="mt-1">LOG IN</h5></button>
                </form>
            </div>
            <div class="col-md-4 col-sm-12"></div>
        </div>
    </div>

        <% include ../partials/signup %>
    </body>


        <script src="js/script.js"></script>
    </div>